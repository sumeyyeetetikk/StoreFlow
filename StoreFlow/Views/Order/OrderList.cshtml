@model List<Order>

@{
    ViewData["Title"] = "OrderList";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Asenkron Sipariş Listesi</h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Müşteri</th>
                                <th>Sipariş Adet</th>
                                <th>Birim Fiyat</th>
                                <th>Toplam Fiyat</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th>@count</th>
                                    <td>@item.product.ProductName</td>
                                    <td>@item.Customer.CustomerName @item.Customer.CustomerSurname</td>
                                    <td>@item.OrderCount</td>
                                    <td>@item.UnitPrice $</td>
                                    <td>@item.TotalPrice $</td>
                                    <td>@item.Status</td>
                                    <td><a href="/Order/DeleteOrder/@item.OrderId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Order/UpdateOrder/@item.OrderId" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Order/CreateOrder/" class="btn btn-outline-primary">Yeni Sipariş Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>